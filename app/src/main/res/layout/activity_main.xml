<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kabaddi"
        android:padding="6dp"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:textSize="38sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="6dp"
        >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Team A"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/teamAZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/colorPrimary"
                android:text="0"
                android:textColor="#fff"
                android:onClick="onClick"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamAOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/teamAZero"
                android:layout_margin="4dp"
                android:background="@color/colorPrimary"
                android:text="1"
                android:textColor="#fff"
                android:onClick="onClick"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamATwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teamAZero"
                android:background="@color/colorPrimary"
                android:text="2"
                android:layout_margin="4dp"
                android:textColor="#fff"
                android:onClick="onClick"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamAThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teamAZero"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/teamATwo"
                android:background="@color/colorPrimary"
                android:text="3"
                android:onClick="onClick"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamAFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_below="@id/teamATwo"
                android:layout_margin="4dp"
                android:onClick="onClick"
                android:text="4"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamAFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teamATwo"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/teamATwo"
                android:background="@color/colorPrimary"
                android:text="5"
                android:textColor="#fff"
                android:onClick="onClick"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/teamASix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_below="@id/teamAFour"
                android:layout_margin="4dp"
                android:text="6"
                android:onClick="onClick"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamASeven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_below="@id/teamAFour"
                android:layout_toRightOf="@id/teamATwo"
                android:background="@color/colorPrimary"
                android:text="7"
                android:textColor="#fff"
                android:onClick="onClick"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/teamAEight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_below="@id/teamASix"
                android:layout_margin="4dp"
                android:text="8"
                android:textColor="#fff"
                android:textSize="18sp"
                android:onClick="onClick"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamANine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teamASeven"
                android:onClick="onClick"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/teamATwo"
                android:background="@color/colorPrimary"
                android:text="9"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/scoreTeamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="0"
            android:padding="4dp"
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:background="@color/colorAccent"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>
<View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="#EEEDE3E3"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Team B"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/teamBZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/colorPrimary"
                android:onClick="onClick"
                android:text="0"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamBOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/teamBZero"
                android:layout_margin="4dp"
                android:onClick="onClick"
                android:background="@color/colorPrimary"
                android:text="1"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamBTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teamBZero"
                android:background="@color/colorPrimary"
                android:text="2"
                android:layout_margin="4dp"
                android:textColor="#fff"
                android:onClick="onClick"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamBThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teamBZero"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/teamBTwo"
                android:background="@color/colorPrimary"
                android:text="3"
                android:textColor="#fff"
                android:onClick="onClick"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamBFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_below="@id/teamBTwo"
                android:layout_margin="4dp"
                android:text="4"
                android:textColor="#fff"
                android:onClick="onClick"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamBFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:layout_below="@id/teamBTwo"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/teamBTwo"
                android:background="@color/colorPrimary"
                android:text="5"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/teamBSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_below="@id/teamBFour"
                android:onClick="onClick"
                android:layout_margin="4dp"
                android:text="6"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamBSeven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:layout_margin="4dp"
                android:layout_below="@id/teamBFour"
                android:layout_toRightOf="@id/teamBTwo"
                android:background="@color/colorPrimary"
                android:text="7"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/teamBEight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_below="@id/teamBSix"
                android:layout_margin="4dp"
                android:text="8"
                android:onClick="onClick"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamBNine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teamBSeven"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/teamBTwo"
                android:background="@color/colorPrimary"
                android:text="9"
                android:onClick="onClick"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/scoreTeamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="0"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/reset"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:textSize="28sp"
        />
</LinearLayout>